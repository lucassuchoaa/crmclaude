# Server Configuration
NODE_ENV=development
PORT=3001

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
REFRESH_SECRET=your-refresh-secret-key-change-in-production-minimum-32-chars

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Frontend Configuration
VITE_API_URL=http://localhost:3001/api

# Database (SQLite - path relative to server/data/)
# No additional config needed for SQLite

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Email Configuration
# Provider: gmail | ses
MAIL_PROVIDER=gmail
MAIL_FROM=noreply@somapay.com.br

# Gmail SMTP (use App Password, not your regular password)
# https://myaccount.google.com/apppasswords
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Amazon SES (uncomment and fill when switching to SES)
# MAIL_PROVIDER=ses
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
